gem 'devise'            # user authentication system
gem 'cancan'            # rights and roles

gem 'tiny_mce'
gem 'activeadmin'

gem "rest-client"

gem 'bitmask_attributes'
gem 'enumerated_attribute'

gem 'bindata'
gem 'delayed_job_active_record'

# Use unicorn as the web server
gem 'unicorn'
gem 'capistrano', :group => :development, :require => false

#  Use pagination
gem 'kaminari'

group :test, :development do
  gem "rspec-rails", "~> 2.6"
  gem 'shoulda'
  gem "factory_girl_rails", "~> 1.2"
  gem 'autotest'
  gem 'spork'
  gem 'test_notifier'
end

