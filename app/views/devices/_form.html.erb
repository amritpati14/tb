<%= form_for @device, :url => (@device.new_record? ? textbusters_path : textbuster_path(@device)), :html => {:id => 'new_device', :class => "modal modal_small hide form-vertical"}, :remote => true do |f| %>

  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3 id='header'>Add new Textbuster</h3>
  </div>
  
  <div class="modal-body">  
  <div class="control-group">
    <label class="convtrol-label" for="f1">Description:</label>
    <div class="controls">
      <%= f.text_field :name, :class => 'span4' %>
    </div>
    
    <label class="convtrol-label" for="f1">imei:</label>
    <div class="controls">
      <%= f.text_field :imei, :class => 'span4' %>
    </div>

    <label class="convtrol-label" for="f1">Phone list:</label>
    <div class="controls">
      <% @family.phones.each do |phone| %>
        <label class="checkbox">
          <%= check_box_tag "device[phone_ids][]", phone.id, f.object.phones.include?(phone) %>
          <%= phone.user.name %>, <%= phone.name %>
        </label>
      <% end %>
    </div>
  </div>
</div>

<div class="modal-footer">
  <%= f.submit :class => "btn" %>
</div>
<% end %>

