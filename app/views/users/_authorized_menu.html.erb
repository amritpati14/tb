<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= brand true %>
      <div class="nav-block">
        <div class="user">
          <%= link_to_if can?(:read, current_user.family), "Hello #{current_user.name}", 
            current_user.admin? ? admin_dashboard_path : family_path(current_user.family || 1), :style => "color:#fff" %>
        </div>
        <ul class="nav">
          <% Page.by_menu(:menu_logged_in).by_menu(:menu_main).each do |page| %>
            <li><%= link_to page.title, page_path(page) %></li>
          <% end %>
          <li><%= link_to "Log Out", destroy_user_session_path, :method => :delete, :class => "alt" %></li>
        </ul>
      </div>
    </div>
  </div>
</div><!-- /navbar -->

